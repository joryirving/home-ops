# Required
GATEWAY_URL=ws://your-gateway:18789
SESSION_SECRET=your-random-secret-at-least-32-chars

# Optional - Server
PORT=3000
NODE_ENV=production

# TLS (optional)
# TLS_KEY_PATH=/path/to/server.key
# TLS_CERT_PATH=/path/to/server.crt

# Auth - Local (default)
OIDC_ENABLED=false
LOCAL_USERS=admin:password123

# Auth - OIDC (uncomment and configure to enable)
# OIDC_ENABLED=true
# OIDC_ISSUER=https://authentik.yourdomain.com
# OIDC_CLIENT_ID=openclaw-chat
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_CALLBACK_URL=https://chat.yourdomain.com/auth/oidc/callback
