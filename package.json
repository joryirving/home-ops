{
  "name": "miso-chat",
  "version": "1.0.0",
  "description": "Chat app connected to OpenClaw gateway with OIDC + local auth",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "NODE_ENV=test jest --ci --coverage --json --outputFile=test-results.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security": "npm audit --audit-level=high"
  },
  "dependencies": {
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.0.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.0",
    "express-session": "^1.17.3",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "memorystore": "^1.6.7",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-openidconnect": "^0.1.1",
    "redis": "^5.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^10.0.0",
    "jest": "^30.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
